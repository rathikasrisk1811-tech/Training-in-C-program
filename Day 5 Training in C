//Sum of Elements in Array
#include <stdio.h>
int main(){
    int size;
    scanf("%d",&size);
    int arr[size];
    int sum=0;
    for(int i=0;i<size;i++){
      scanf("%d",&arr[i]);
      sum=sum+arr[i];
    }
     printf("%d",sum);
    return 0;
}

//Sum Based on Even/Odd Elements and Indexes
#include <stdio.h>
int main() {
    int n;
    int arr[100];
    int evenElementSum = 0, oddElementSum = 0;
    int evenIndexSum = 0, oddIndexSum = 0;
    scanf("%d", &n);
    for(int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
        if(arr[i] % 2 == 0)
            evenElementSum += arr[i];
        else
            oddElementSum += arr[i];
        if(i % 2 == 0)
            evenIndexSum += arr[i];
        else
            oddIndexSum += arr[i];
    }
    printf("%d %d %d %d", evenElementSum, oddElementSum, evenIndexSum, oddIndexSum);
    return 0;
}

//Reverse the Array
#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>
int main() {
    int size;
    scanf("%d",&size);
    int arr[size];
    for(int i=0;i<size;i++)
    {
      scanf("%d",&arr[i]);
    }
    for(int i=0,j=size-1;i<=j;i++,j--)
    {
        int temp=arr[i];
        arr[i]=arr[j];
        arr[j]=temp;
    }
    for(int i=0;i<size;i++){
        printf("%d ",arr[i]);
    }
    return 0;
}

// Codechef-Largest and Second Largest
#include <stdio.h>
int main() {
    int T;
    scanf("%d", &T);
    while (T--) {
        int N;
        scanf("%d", &N);
        int arr[N];
        for (int i = 0; i < N; i++) {
            scanf("%d", &arr[i]);
        }
        int max1 = -1, max2 = -1;
        for (int i = 0; i < N; i++) {
            if (arr[i] > max1) {
                if (max1 != arr[i]) {
                    max2 = max1;
                }
                max1 = arr[i];
            } else if (arr[i] > max2 && arr[i] != max1) {
                max2 = arr[i];
            }
        }
        printf("%d\n", max1 + max2);
    }
    return 0;
}
